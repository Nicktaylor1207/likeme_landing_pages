extends layout

block content
	div.body-inner-container
		div#login-failed-container
			div#forgot-pass-success-cnt
				p#forgot-pass-success Thanks! An email has been sent to you containing your password. Please login below.
				form#loginForm(method="POST", action="/session")
					fieldset.login-failed-input
						label.login-label(for="email") Email Address
						input.login-input(type="text", name="email", placeholder="Your email")
					fieldset.login-failed-input
						label.login-label(for="password") Password
						input.login-input(type="password", name="password", placeholder="Your password")
					a#login-failed-signup(href="/signup")
						button.btn.btn-large.btn-primary(type="submit") Log in
					div#still-trouble
						p Still having trouble logging in? <a href="/contact">Contact us</a>
	script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
	script(src='/bootstrap/js/bootstrap.min.js')
	script(type="text/javascript", src="/javascripts/script.js")
	script(type="text/javascript", src="jquery-cookie-master/jquery.cookie.js")
	script(type='text/javascript', src='jquery.html5-placeholder-shim.js')
	script.
		var navLogin = !{JSON.stringify(navLogin)}
	script.
		var user = !{JSON.stringify(user)}
	script.
		var id = !{JSON.stringify(id)}