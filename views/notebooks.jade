extends layout

block content
	div.body-inner-container
		div.nb-container
			h2#nb-header My Notebooks
			button.btn.btn-large.btn-primary#nb-add-notebooks(href="#nb-add-notebooks-modal", role="button", data-toggle="modal") Add Photos
			div.nb-notebooks-container
				a(href="/notebooks-create")
					div#add-nb-notebook-img-container
						p#nb-add-notebook-text Add Notebook
		//
				div#nb-add-notebooks-modal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="loginModalLabel", aria-hidden="true")
					div.modal-body#nb-notebooks-modal-body
						button.close#nb-notebooks-modal-close(type="button", data-dismiss="modal", aria-hidden="true") ×
						h4#nb-notebooks-modal-header Add a notebook from a website
					div#nb-notebooks-modal-form-container
						form#nb-notebooks-modal-form(method="POST", action="/upload1")
							input#nb-notebooks-modal-input(type="text", placeholder="Paste the link to the page containing the notebook...", name="url")
							div.modal-footer#nb-notebooks-modal-footer
								a#nb-notebooks-modal-cancel(data-dismiss="modal", aria-hidden="true") Cancel
								input.btn.btn-primary(type="submit", value="Add notebook")
			div.modal.full-notebook-modal#notebook-modal.hide(tabindex="-1", role="dialog", aria-labelledby="notebookModal", aria-hidden="true")
				div#pm-left-ctn.full-pm-left-ctn
					img#pm-notebook(src="#", finder="#")
					div.pm-arrow-ctn#pm-arrow-left-ctn <span class="pm-arrow" id="pm-arrow-left">&lsaquo;</span>
					div.pm-arrow-ctn <span class="pm-arrow" id="pm-arrow-right">&rsaquo;</span>
					div.arrow-bg#full-arrow-bg
						button.close#fullscreen-close(type="button", data-dismiss="modal", aria-hidden="true", title='Exit full screen') ×
	script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
	script(src='/bootstrap/js/bootstrap.min.js')
	script(type="text/javascript", src="/javascripts/script.js")
	script(type="text/javascript", src="jquery-cookie-master/jquery.cookie.js")
	script(type='text/javascript', src='jquery.html5-placeholder-shim.js')
	script(type="text/javascript", src="/javascripts/notebook.js")
	script(type="text/javascript", src="/javascripts/notebook-modal.js")
	script.
		var navLogin = !{JSON.stringify(navLogin)}
	script.
		var user = !{JSON.stringify(user)}
	script.
		var id = !{JSON.stringify(id)}
	script.
		var notebooks = !{JSON.stringify(notebooks)}
	script.
		var comments = !{JSON.stringify(comments)}