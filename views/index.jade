doctype 5
html
	head
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
		script(src='/bootstrap/js/bootstrap.min.js')
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
		script
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-38419802-2', 'sevenalbums.com');
			ga('send', 'pageview');
	body
		script
			var hide = !{JSON.stringify(hide)}
		div#myCarousel(class="carousel slide")
			div(class="carousel-inner")
				div(class="item active")
					img.landing-bg(src="images/store1.jpg", alt="")
				div(class="item")
					img.landing-bg(src="images/store2.jpg", alt="")
		a(class="left carousel-control", href="#myCarousel", data-slide="prev") &lsaquo;
		a(class="right carousel-control", href="#myCarousel", data-slide="next") &rsaquo;
		div#landing-page-intro-wrap
			div#landing-welcome
				h2#landing-header Welcome to Seven Albums
				p#landing-sub-header A photographic catalog of retail interiors for small business owners
				//p Name is a photographic catalog of store interiors.
				div#landing-content
					p Find inspiration, ideas, professionals and products to help you design your store.
					p Sign up to view a catalog of retail interiors.
				form#landing-signup-form(method="POST", action="/signup")
					input#landing-email-input(name="email", type="text", placeholder="Enter your email address")
					div#landing-signup-container
						button#landing-sign-up.btn.btn-large.btn-primary(type="submit", onclick="$('#landing-signup').toggle()") Sign up
						p#landing-btn-or or
						a(href="learn-more") Learn more
			div#thanks-for-sign-up.hide()
				h3#landing-header Thanks for signing up!
				p We will notify you when our site launches, which will be very soon.
				p In the meantime, please <a href="learn-more">contact us</a> or <a href="learn-more">learn more</a> about Seven Albums.
		script(type="text/javascript", src="/javascripts/script.js")					