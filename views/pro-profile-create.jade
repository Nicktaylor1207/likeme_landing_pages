extends layout

block content
	div.body-inner-container
		div#create-profile-body-container
			h1.create-profile-header Create Profile
			form#create-profile-form(method="POST", action="/create-profile")
				div.row-fluid
					div.span6#create-profile-content-left
						h3 Upload Profile Picture
						div#choose-file-container
							btn.btn-primary.btn-large#choose-file-btn Choose File
							input#choose-file-input(type="file", name="files[]")
						div#create-profile-photo-container-empty
						div#create-profile-photo-container.hide(style='background-image: url("images/jess.jpg")')
							img.profile-photo(src="images/jess.jpg")
					div.span6#create-profile-content-right
						h3 Profile Details <span class="create-profile-optional">(optional)</span>
						p
							label.create-profile-label(for="title") Title
							input.create-profile-input(name="title", type="text", placeholder="e.g. Design Consultant, MDC Design")
						p
							label.create-profile-label(for="website") Website
							input.create-profile-input(name="website", type="text")
						p
							label.create-profile-label(for="description") Description
							textarea.create-profile-input-textarea(type="textarea", rows="5", placeholder="Enter a short bio...", name="description")
						h3 Contact Info <span class="create-profile-optional">(optional)</span>
						p
							label.create-profile-label(for="number") Phone Number
							input.create-profile-input(name="number", type="text")
						p
							label.create-profile-label(for="address") Address
							textarea.create-profile-input-textarea(name="address", type="textarea", rows="3")
						div.signup-center-container
							button#signup-sign-up-btn.btn.btn-large.btn-primary(type="submit") Create My Profile
	script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
	script(src='/bootstrap/js/bootstrap.min.js')
	script(type="text/javascript", src="/javascripts/signin.js")
	script(type="text/javascript", src="/javascripts/loggedin.js")
	script(type="text/javascript", src="jquery-cookie-master/jquery.cookie.js")
	script(type='text/javascript', src='jquery.html5-placeholder-shim.js')
	script.
		var navLogin = !{JSON.stringify(navLogin)}
	script.
		var user = !{JSON.stringify(user)}